{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./server/dist",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "src/**/*.ts"
    ]
}